<style>
    .navbar-custom {
      padding: 0.5rem 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar-toggler {
      margin-left: auto;
    }

    .navbar-nav .nav-link {
      margin-left: 2rem;
      text-align: center;
    }

    .nav-filter {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-decoration: none;
      color: inherit;
      opacity: 0.7;
      transition: opacity 0.3s;
      margin-left: 1.5rem;
    }

    .nav-filter:hover {
      opacity: 1;
    }

    .filters {
      margin-left: 15rem;
      display: flex;
    }

    .search-bar-custom {
      position: sticky;
      top: 70px;
      z-index: 1020;
      background-color: #f8f9fa;
      padding: 0.5rem 0;
      display: flex;
      justify-content: center;
    }

    .search-pill {
      display: flex;
      align-items: center;
      background-color: white;
      border-radius: 50px;
      padding: 10px 20px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      gap: 25px;
      width: 100%;
      max-width: 800px;
    }

    .search-section {
      display: flex;
      flex-direction: column;
      flex: 1;
    }

    .search-section label {
      font-size: 13px;
      font-weight: bold;
    }

    .search-section input {
      border: none;
      outline: none;
      font-size: 15px;
      color: #555;
      margin-top: 3px;
      background: none;
      width: 100%;
    }

    .divider {
      height: 40px;
      width: 1px;
      background-color: #ddd;
    }

    .search-icon-btn {
      background-color: #fe424d;
      color: white;
      border: none;
      padding: 12px;
      border-radius: 50%;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .search-icon-btn i {
      font-size: 16px;
    }

    @media (max-width: 768px) {
      .search-pill {
        flex-direction: column;
        gap: 10px;
        padding: 12px;
        max-width: 100%;
      }

      .divider {
        display: none;
      }

      .search-section {
        width: 100%;
      }

      .filters {
        margin-left: 0;
      }
    }
  </style>
</head>
<body>
  <!-- ✅ NAVIGATION BAR -->
  <nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid navbar-custom">
      <!-- Brand -->
      <a class="navbar-brand" href="/listings">
        <i class="fa-regular fa-compass"></i>
      </a>

      <!-- Toggler (for small screens) -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Collapsible Section -->
      <div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup">
        <!-- Navigation Filters -->
        <div class="navbar-nav d-flex flex-row">
          <div class="filters">
            <a class="nav-link nav-filter" href="/listings">
              <i class="fa-solid fa-house"></i>
              <small>Home</small>
            </a>
            <a class="nav-link nav-filter" href="/experience">
              <i class="fa-solid fa-car-side"></i>
              <small>Experience</small>
            </a>
            <a class="nav-link nav-filter" href="/service">
              <i class="fa-solid fa-bell-concierge"></i>
              <small>Services</small>
            </a>
          </div>
        </div>

        <!-- Auth Links -->
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new">Become a host</a>
          <% if (typeof currentUser === 'undefined' || !currentUser) { %>
            <a class="nav-link" href="/signup"><b>Signup</b></a>
            <a class="nav-link" href="/login"><b>Login</b></a>
          <% } else { %>
            <a class="nav-link" href="/logout"><b>Logout</b></a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <!-- ✅ STICKY SEARCH BAR -->
  <div class="search-bar-custom">
    <form class="search-pill" action="/listings" method="GET">
      <div class="search-section">
        <label>Where</label>
        <input type="text" name="location" placeholder="Search destinations" />
      </div>

      <div class="divider"></div>

      <div class="search-section">
        <label>Date</label>
        <input type="text" name="date" id="datepicker" placeholder="Add dates" />
      </div>

      <div class="divider"></div>

      <div class="search-section">
        <label>Who</label>
        <input type="text" placeholder="Add guests" />
      </div>

      <button type="submit" class="search-icon-btn">
        <i class="fas fa-search"></i>
      </button>
    </form>
  </div>